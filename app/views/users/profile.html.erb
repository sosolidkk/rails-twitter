<div class="row py-5 px-4">
  <div class="col-md-12 mx-auto">
    <!-- Profile widget -->
    <div class="bg-white shadow rounded overflow-hidden">
      <div class="px-4 pt-0 pb-0 cover">
        <div class="media align-items-end profile-head">
          <div class="profile mr-3 mt-3">
            <img src="https://images.unsplash.com/photo-1524704796725-9fc3044a58b2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" alt="Profile Picture" width="200" class="rounded mb-2 img-thumbnail">
          </div>
          <%= link_to 'Edit profile', edit_user_registration_path, :class => 'btn btn-primary btn-sm btn-block' %>
          <div class="media-body mb-5">
            <p>
              <h4 class="mt-1 mb-0"><%= @user.fake_username %></h4>
              <small><strong><%= @user.username %></strong></small><br/>
              <small><%= @user.email %></small>
            </p>
          </div>
        </div>
      </div>
      <div class="bg-light p-4 m-4 rounded shadow-sm d-flex justify-content-begin text-center">
        <ul class="list-inline mb-0">
          <li class="list-inline-item">
            <h5 class="font-weight-bold mb-0 d-block"><%= @tweets_count %></h5>
            <small class="text-muted">TWEETS</small>
          </li>
          <li class="list-inline-item">
            <h5 class="font-weight-bold mb-0 d-block">-</h5>
            <small class="text-muted">FOLLOWERS</small>
          </li>
          <li class="list-inline-item">
            <h5 class="font-weight-bold mb-0 d-block">-</h5>
            <small class="text-muted">FOLLOWING</small>
          </li>
        </ul>
      </div>
      <div class="px-4 py-3 rounded">
        <h5 class="mb-1">About</h5>
        <div class="p-4 rounded shadow-sm bg-light">
          <p class="font-italic mb-0"><%= @user.bio %></p>
        </div>
      </div>

      <div class="px-4 py-3 rounded">
        <h5 class="mb-1">Connection Info</h5>
        <div class="p-4 rounded shadow-sm bg-light">
          <p class="font-italic mb-0">
            <strong>Logged counter</strong>: <%= @user.sign_in_count %>
          </p>
          <p class="font-italic mb-0">
            <strong>Last login date</strong>: <%= time_ago_in_words(@user.last_sign_in_at) unless @user.last_sign_in_at.nil? %>
          </p>
          <p class="font-italic mb-0">
            <strong>Current IP</strong>: <%= @user.current_sign_in_ip %>
          </p>
          <p class="font-italic mb-0">
            <strong>Last IP</strong>: <%= @user.last_sign_in_ip %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
