<% flash.each do |key, value| %>
  <div class="alert alert-success alert-dismissible fade show mt-2">
    <%= value %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
<div class="mt-2">
  <% @tweets.reverse.each do |tweet| %>
    <div class="row d-flex justify-content-center">
      <div class="col-6 mb-4">
        <div class="card rounded shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= link_to tweet.user.username, user_profile_path(tweet.user) %></h5>
            <p class="card-text"><%= tweet.body %></p>
            <% if current_user.liked? tweet %>
              <%= link_to dislike_tweet_path(tweet.id), method: :put, :class => 'btn btn-sm btn-outline-danger' do %>
                <%= image_tag("like.png", :alt => "Like", height: 18, width: 20) %>
                <%= tweet.get_likes.size %>
              <% end %>
            <% else %>
              <%= link_to like_tweet_path(tweet), method: :put, :class => 'btn btn-sm btn-outline-danger' do %>
                <%= image_tag("dislike.png", :alt => "Like", height: 18, width: 20) %>
                <%= tweet.get_likes.size %>
              <% end %>
            <% end %>
            <% if current_user == tweet.user %>
              <%= link_to "Delete", tweet_path(tweet.id), data: { confirm: 'Are you sure you want to delete this Tweet?' }, :method => :delete, :class => 'btn btn-sm btn-danger' %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small><%= tweet.created_at.strftime("%d %b. %Y") %> </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
